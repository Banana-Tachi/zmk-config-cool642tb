#define SYMBOL_LAYER 1
#define MOUSE_LAYER 2
#define NUM_LAYER 3
#define BLUETOOTH_LAYER 4 
#define SCROLL_LAYER 5
#define ZMK_MOUSE_DEFAULT_SCRL_VAL 120 // スクロール量

&mt {
    flavor = "balanced";
    quick-tap-ms = <0>;
    tapping-term-ms = <150>; 
};
&msc {
    delay-ms = <0>;
    trigger-period-ms = <10>;
    time-to-max-speed-ms = <0>;
    acceleration-exponent = <0>;
};

